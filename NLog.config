<?xml version="1.0" encoding="utf-8" ?>


<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Info"
      internalLogFile="c:\	emp\
log-internal.log">


	<!-- Define variables for reusable paths and layouts -->
	<variable name="logDirectory" value="${basedir}/App_Data/logs"/>
	<variable name="defaultLayout" value="${longdate} | ${uppercase:${level}} | ${logger} | ${message} ${exception:format=tostring}"/>
	<variable name="detailedLayout" value="${longdate} | ${uppercase:${level}} | ${logger} | ${callsite} | ${message} ${exception:format=tostring,Data:maxInnerExceptionLevel=10}"/>

	<!-- File targets -->
	<targets>
		<!-- General application log file -->
		<target xsi:type="File" name="allFile"
				fileName="${logDirectory}/app-${shortdate}.log"
				layout="${defaultLayout}"
				archiveFileName="${logDirectory}/archives/app-{#}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				maxArchiveFiles="30"
				concurrentWrites="true"
				keepFileOpen="false" />

		<!-- Error and Fatal log file with detailed information -->
		<target xsi:type="File" name="errorFile"
				fileName="${logDirectory}/errors-${shortdate}.log"
				layout="${detailedLayout}"
				archiveFileName="${logDirectory}/archives/errors-{#}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				maxArchiveFiles="90"
				concurrentWrites="true"
				keepFileOpen="false" />

		<!-- Authentication and security log file -->
		<target xsi:type="File" name="authFile"
				fileName="${logDirectory}/auth-${shortdate}.log"
				layout="${defaultLayout}"
				archiveFileName="${logDirectory}/archives/auth-{#}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				maxArchiveFiles="90"
				concurrentWrites="true"
				keepFileOpen="false" />

		<!-- Database operations log file -->
		<target xsi:type="File" name="dbFile"
				fileName="${logDirectory}/database-${shortdate}.log"
				layout="${defaultLayout}"
				archiveFileName="${logDirectory}/archives/database-{#}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				maxArchiveFiles="30"
				concurrentWrites="true"
				keepFileOpen="false" />

		<!-- Business operations log file -->
		<target xsi:type="File" name="businessFile"
				fileName="${logDirectory}/business-${shortdate}.log"
				layout="${defaultLayout}"
				archiveFileName="${logDirectory}/archives/business-{#}.log"
				archiveEvery="Day"
				archiveNumbering="Date"
				maxArchiveFiles="30"
				concurrentWrites="true"
				keepFileOpen="false" />

		<!-- Console target for debugging -->
		<target xsi:type="Console" name="console"
				layout="${defaultLayout}" />
	</targets>

	<!-- Logging rules -->
	<rules>
		<!-- All logs Info and above go to main log file -->
		<logger name="*" minlevel="Info" writeTo="allFile" />

		<!-- Errors and Fatal go to error log with detailed information -->
		<logger name="*" minlevel="Error" writeTo="errorFile" />

		<!-- Authentication related logs -->
		<logger name="*.Login" minlevel="Info" writeTo="authFile" />
		<logger name="*.Register" minlevel="Info" writeTo="authFile" />
		<logger name="*.Global" minlevel="Info" writeTo="authFile" />

		<!-- Database operation logs -->
		<logger name="*" minlevel="Debug" writeTo="dbFile">
			<filters>
				<when condition="contains('${message}','SQL') or contains('${message}','Database') or contains('${message}','Query')" action="Log" />
			</filters>
		</logger>

		<!-- Business operation logs -->
		<logger name="*.Borrow" minlevel="Info" writeTo="businessFile" />
		<logger name="*.ManageBooks" minlevel="Info" writeTo="businessFile" />
		<logger name="*.ManageUsers" minlevel="Info" writeTo="businessFile" />
		<logger name="*.BorrowRecords" minlevel="Info" writeTo="businessFile" />

		<!-- Console output for debugging (optional - comment out in production) -->
		<!-- <logger name="*" minlevel="Debug" writeTo="console" /> -->
	</rules>

</nlog>